<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-primary">
        <div class="panel-heading">Create a New Message</div>
          <div class="panel-body">
            <%= form_for(message_index_path(@message), :html => {class: "form-horizontal", role: "form"}) do |f| %>

              <!-- Personal Info -->
              <div class="form-group">
                <div class="control-label col-sm-2">
                  <%= f.label :content %>
                </div>
                <div class="col-sm-8">
                  <%= f.text_area :content, class: "form-control", placeholder: "Enter Name", autofocus: true %>
                </div>
              </div>
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: "btn btn-primary"%>
                  </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>







<h1>Insta Message</h1>



<% @conversation.messages.reverse.each do |message| %>
  <% if message.user_id == current_user.id %>
    <p><strong><%= current_user.name %></strong> : <%= message.content %></p>
  <% else %>

    <p><strong><%= User.find(@conversation.sender_id).name %></strong> : <%= message.content %></p>
  <% end %>
<% end %>
