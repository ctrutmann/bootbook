            <%= f.label :employment_status %>
          </div>
          <div class="col-sm-8">
            <%= f.select(:employment_status, [['Unemployed', 'Unemployed'], ['Employed Full-Time', 'Employed Full-Time'], ['Other', 'Other']]) %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :employer %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :employer, class: "form-control", placeholder: "Enter Employer", autofocus: true %>
          </div>
        </div>
        ​
