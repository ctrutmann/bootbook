        <div class="control-label col-sm-2">
          <%= f.label :prior_coding_experience %>
        </div>
        <div class="col-sm-8">
          <%= f.select(:prior_coding_experience, [['None', 'None'], ['Some', 'Some'], ['A Lot', 'A Lot']]) %>
