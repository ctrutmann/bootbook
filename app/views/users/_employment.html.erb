<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading">Thank you for Sign Up!</div>
                    <div class="panel-body">
                        <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

                    <div class="form-group">
                        <div class="control-label col-sm-2">
                            <%= f.label :employer %>
                        </div>
                        <div class="col-sm-8">
                            <%= f.text_field :employer, class: "form-control", placeholder: "Enter Employer", autofocus: true %>
                        </div>
                    </div>
​
                    <div class="form-group">
                        <div class="control-label col-sm-2">
                            <%= f.label :role %>
                        </div>
                        <div class="col-sm-8">
                            <%= f.text_field :role, class: "form-control", placeholder: "Enter role", autofocus: true %>
                        </div>
                    </div>
​
                    <div class="form-group">
                        <div class="control-label col-sm-2">
                            <%= f.label :salary %>
                        </div>
                        <div class="col-sm-8">
                            <%= f.text_field :salary, class: "form-control", placeholder: "Enter salary", autofocus: true %>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <%= f.submit class: "btn btn-default"%>
                        </div>
                    </div>
​
                        <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
