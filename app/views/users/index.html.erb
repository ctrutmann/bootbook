<div class="col-sm-3 col-md-2 sidebar">
  <div class="row placeholders-sidebar">
    <div class="col-m-6 col-m-3 placeholder-sidebar">
      <%= link_to(current_user) do %>
        <div class="col-m-6 col-m-3 placeholder">
          <img src="<%= current_user.profile_image %>" width="200" height="200" class="img-responsive" alt="Generic placeholder thumbnail">
        </div>
      <% end %>
      <h4><%=  current_user.name %></h4>
      <span class="text-muted">
        <%= current_user.cohorts.last.name %><br>
        <%= current_user.cohorts.last.campus %>
      </span>
    </div>
  </div>

  <div>
    <form class="navbar-form navbar-right" action="/users" method="get">
      <label>Only Favorite Boots</label>
      <input name="favorite_boots" type="hidden" value="0" />
      <input type="checkbox" id="favorite_boots" name="favorite_boots" value="1" />

      <input list="find-city" name="city" class="form-control" placeholder="City" />
      <datalist id="find-city">
      <% @cities.each do |city| %>
        <option value="<%= city %>"></option>
      <% end %>
      </datalist>

      <input list="find-state" name="state" class="form-control" placeholder="State" />
      <datalist id="find-state">
      <% @states.each do |state| %>
        <option value="<%= state %>"></option>
      <% end %>
      </datalist>

      <input list="find-country" name="country" class="form-control" placeholder="Country" />
      <datalist id="find-country">
      <% @countries.each do |country| %>
        <option value="<%= country %>"></option>
      <% end %>
      </datalist>

      <input list="find-cohort" name="cohort" class="form-control" placeholder="Cohort" />
      <datalist id="find-cohort">
      <% @cohorts.each do |cohort| %>
        <option value="<%= cohort %>"></option>
      <% end %>
      </datalist>

      <input list="find-campus" name="campus" class="form-control" placeholder="Campus" />
      <datalist id="find-campus">
      <% @campuses.each do |campus| %>
        <option value="<%= campus %>"></option>
      <% end %>
      </datalist>

      <input list="find-graduation-date" name="graduation_date" class="form-control" placeholder="Graduation Date" />
      <datalist id="find-graduation-date">
      <% @graduation_dates.each do |graduation_date| %>
        <option value="<%= graduation_date %>"></option>
      <% end %>
      </datalist>

      <input list="find-interest" name="interest" class="form-control" placeholder="Interest" />
      <datalist id="find-interest">
      <% @interests.each do |interest| %>
        <option value="<%= interest %>"></option>
      <% end %>
      </datalist>

      <input type="submit" value="Filter Boots">
    </form>
  </div>
</div>

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <h1 class="page-header">Boots<span>&nbsp;&nbsp;<a href="" id="toggle-view" class="smaller-header-text">Show as Map</a></span></h1>

  <div id="grid-view" class="row placeholders">
    <%= render 'gridview' %>
  </div>

  <div id="map-view" style="display: none">
    <div id="map"></div>
  </div>

</div>
